<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_RIGHT" prefHeight="540.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chexmoi.controlador.SeccionPerfilControlador">
   <children>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Label fx:id="etiquetaNombreCompleto" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="31.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="Nombre:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox prefWidth="100.0" spacing="4.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="campoTextoNombre" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" promptText="Ej. José Pérez" style="-fx-background-color: transparent; -fx-border-color: #777; -fx-text-fill: #fff;">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="8.0" right="8.0" />
                     </padding>
                  </TextField>
                  <Label fx:id="etiquetaNombreNoValido" text="Label" textFill="RED" visible="false" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="Apellido Paterno:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox prefWidth="100.0" spacing="4.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="campoTextoApellido" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" promptText="Hernández" style="-fx-background-color: transparent; -fx-border-color: #777; -fx-text-fill: #fff;">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="8.0" right="8.0" />
                     </padding>
                  </TextField>
                  <Label fx:id="etiquetaApellidoNoValido" text="Label" textFill="RED" visible="false" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="Correo Electrónico:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox prefWidth="100.0" spacing="4.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="campoTextoCorreo" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" promptText="Ej. joseperezhernandez@uv.mx" style="-fx-background-color: transparent; -fx-border-color: #777; -fx-text-fill: #fff;">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="8.0" right="8.0" />
                     </padding>
                  </TextField>
                  <Label fx:id="etiquetaCorreoNoValido" text="Label" textFill="RED" visible="false" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="Teléfono:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox prefWidth="100.0" spacing="4.0" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="campoTextoTelefono" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" promptText="Ej. 2791074983" style="-fx-background-color: transparent; -fx-border-color: #777; -fx-text-fill: #fff; -fx-text-color: #fff;">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="8.0" right="8.0" />
                     </padding>
                  </TextField>
                  <Label fx:id="etiquetaTelefonoNoValido" text="Label" textFill="RED" visible="false" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" onAction="#guardarEdicion" text="Guardar" visible="false">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelarEdicion" text="Cancelar" visible="false">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="editButton" mnemonicParsing="false" onAction="#editarPerfil" text="Editar">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="40.0" left="80.0" right="80.0" top="40.0" />
   </padding>
</VBox>
