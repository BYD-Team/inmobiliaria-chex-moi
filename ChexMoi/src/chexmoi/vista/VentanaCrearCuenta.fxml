<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="ventanaCrearCuenta" prefHeight="325.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chexmoi.controlador.VentanaCrearCuentaControlador">
   <center>
      <VBox fx:id="camposTextoVBox" prefHeight="200.0" prefWidth="100.0" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="campoTextoNombre" prefHeight="25.0" prefWidth="268.0" />
            <TextField fx:id="campoTextoApellidoPaterno" prefHeight="25.0" prefWidth="268.0" />
            <TextField fx:id="campoTextoCorreoElectronico" prefHeight="25.0" prefWidth="268.0" />
            <TextField fx:id="campoTextoClave" prefHeight="25.0" prefWidth="268.0" />
         </children>
         <BorderPane.margin>
            <Insets right="10.0" top="30.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <left>
      <VBox fx:id="etiquetasVBox" prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="etiquetaNombre" text="Nombre" />
            <Label fx:id="etiquetaApellidoPaterno" text="Apellido Paterno" />
            <Label fx:id="etiquetaCorreoElectronico" text="Correo Electrónico" />
            <Label fx:id="etiquetaClave" text="Contraseña" />
         </children>
         <BorderPane.margin>
            <Insets left="10.0" top="30.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <bottom>
      <HBox fx:id="botonesHBox" alignment="CENTER" prefHeight="12.0" prefWidth="410.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="botonGuardar" mnemonicParsing="false" text="Guardar" />
            <Button fx:id="botonCancelar" mnemonicParsing="false" text="Cancelar" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
